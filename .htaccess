RewriteEngine On

# Allow access to vendor directory for CSS/JS files
RewriteCond %{REQUEST_URI} ^/GESTACAD/vendor/
RewriteRule ^(.*)$ - [L]

# Allow access to public directory
RewriteCond %{REQUEST_URI} ^/GESTACAD/public/
RewriteRule ^(.*)$ - [L]

# Allow access to node_modules directory
RewriteCond %{REQUEST_URI} ^/GESTACAD/node_modules/
RewriteRule ^(.*)$ - [L]

# Allow direct access to controllers
RewriteCond %{REQUEST_URI} ^/GESTACAD/controllers/
RewriteRule ^(.*)$ - [L]

# Allow direct access to models
RewriteCond %{REQUEST_URI} ^/GESTACAD/models/
RewriteRule ^(.*)$ - [L]

# Allow direct access to config
RewriteCond %{REQUEST_URI} ^/GESTACAD/config/
RewriteRule ^(.*)$ - [L]

# Redirect all other requests to index.php
RewriteRule ^(.*)$ index.php [QSA,L]